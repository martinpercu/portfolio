/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths":{
      "@body/*": ["./src/app/domains/body/*"],
      "@header/*": ["./src/app/domains/header/*"],
      "@models/*": ["./src/app/domains/models/*"],
      "@shared/*": ["./src/app/domains/shared/*"],
      "@works/*": ["./src/app/domains/works/*"],
      "@myself/*": ["./src/app/domains/myself/*"],
      "@techs/*": ["./src/app/domains/techs/*"],
      "@projects/*": ["./src/app/domains/projects/*"],
      "@services/*": ["./src/app/domains/services/*"],
      "@icons/*": ["./src/*"],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
